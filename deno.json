{
  "version": "0.0.1-beta.1",
  "workspace": ["./framework", "./example"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["deno.ns", "deno.window", "deno.unstable"]
  },
  "lint": {
    "include": ["./**/*.tsx", "./**/*.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": true
  }
}
