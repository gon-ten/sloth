    "@gdiezpa/blog": "./framework/mod.ts",
    "@mdx-js/mdx": "https://esm.sh/@mdx-js/mdx@3.0.1",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.1",
    "@std/fmt": "jsr:@std/fmt@^1.0.1",
    "@std/fs": "jsr:@std/fs@^1.0.2",
    "@std/http": "jsr:@std/http@^1.0.4",
    "@std/io": "jsr:@std/io@^0.224.6",
    "@std/media-types": "jsr:@std/media-types@^1.0.3",
    "@std/path": "jsr:@std/path@^1.0.3",
    "preact": "https://esm.sh/preact@10.23.2?bundle-deps",
    "preact-iso": "https://esm.sh/preact-iso@2.6.3?deps=preact-render-to-string@6.5.9,preact@10.23.2&bundle-deps",
